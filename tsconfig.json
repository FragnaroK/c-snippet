{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"baseUrl": ".",
		"outDir": "./lib",
		"types": ["@types/jest", "@types/node"],
		"pretty": true,

		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"removeComments": false, 
		
	},

	"buildOptions": {
		"verbose": true
	},

	"include": ["src"],
	
	"exclude": ["node_modules", "**/__tests__/*"]
}
