{
    "reporters": [
        "default",
        "jest-allure"
    ],
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testMatch": [
        "**/__tests__/**/*.ts?(x)",
        "**/?(*.)+(spec|test).ts?(x)"
    ],
    "testRunner": "jest-jasmine2",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "moduleDirectories": [
        "<rootDir>",
        "node_modules"
    ],
    "moduleNameMapper": {
        "^@root/(.*)$": "<rootDir>/src/$1",
        "^@interfaces/(.*)$": "<rootDir>/src/types/$1",
        "^@utils/(.*)$": "<rootDir>/src/utils/$1"
    },
    "setupFilesAfterEnv": [
        "jest-allure/dist/setup"
    ]
}