{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"baseUrl": ".",
		"outDir": "./lib",
		"strict": true,
		"types": ["@types/jest", "@types/node"],
		"pretty": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"alwaysStrict": true,
		"removeComments": true, 
	},
	"include": ["src"],
	
	"exclude": ["node_modules", "**/__tests__/*"]
}
